<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.qls6521.calculator.MainActivity">


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_plus"
        android:id="@+id/bnt_plus"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/edit_num1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bnt_minus" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bnt_minus"
        android:text="@string/str_minus"
        android:layout_above="@+id/bnt_multiply"
        android:layout_alignRight="@+id/bnt_multiply"
        android:layout_alignEnd="@+id/bnt_multiply" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_multiply"
        android:id="@+id/bnt_multiply"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_divide"
        android:id="@+id/bnt_devide"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/bnt_multiply"
        android:layout_alignLeft="@+id/bnt_multiply"
        android:layout_alignStart="@+id/bnt_multiply" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/str_result"
        android:id="@+id/text_result"
        android:textSize="30sp"
        android:textColor="#fa7272"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bnt_devide" />

</RelativeLayout>
